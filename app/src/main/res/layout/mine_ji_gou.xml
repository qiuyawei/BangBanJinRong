<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/top_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/shape_empty_rectangle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                style="@style/login_left_textStyle"
                android:text="@string/gsmc"/>
            <TextView
                android:id="@+id/tv_companyName"
                style="@style/login_right_editextStyle"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dp10"
                android:text=""/>
        </LinearLayout>
        <View
            style="@style/login_viewStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                style="@style/login_left_textStyle"
                android:text="@string/gsdz"/>
            <TextView
                android:id="@+id/tv_address"
                style="@style/login_right_editextStyle"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dp10"
                android:text=""/>
        </LinearLayout>
        <View
            style="@style/login_viewStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                style="@style/login_left_textStyle"
                android:text="@string/jgdm"/>
            <TextView
                android:id="@+id/tv_code"
                style="@style/login_right_editextStyle"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dp10"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>