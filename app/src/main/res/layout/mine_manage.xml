<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/top_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/shape_empty_rectangle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp70"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                style="@style/login_left_textStyle"
                android:text="@string/tx"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@mipmap/defalt_photo"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            style="@style/login_viewStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                style="@style/login_left_textStyle"
                android:text="@string/xm"/>
            <TextView
                android:id="@+id/tv_name"
                style="@style/login_right_editextStyle"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dp10"
                android:text=""/>
        </LinearLayout>
        <View
            style="@style/login_viewStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                style="@style/login_left_textStyle"
                android:text="@string/szcs"/>
            <TextView
                android:id="@+id/tv_city"
                style="@style/login_right_editextStyle"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dp10"
                android:text=""/>
        </LinearLayout>
        <View
            style="@style/login_viewStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                style="@style/login_left_textStyle"
                android:text="@string/sjh"/>
            <TextView
                android:id="@+id/tv_phone"
                style="@style/login_right_editextStyle"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dp10"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>