<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/mine_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:gravity="center"
            android:text="@string/tab_three_name"
            android:textColor="@color/white"
            android:textSize="@dimen/size16" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70"
            android:src="@mipmap/defalt_photo" />

        <TextView
            android:id="@+id/tv_nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center"
            android:text="@string/nick_name"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/phone_logo"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp20"
                android:drawableLeft="@mipmap/gps"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center"
                android:text="上海"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10">

        <RelativeLayout
            android:id="@+id/rl_wallet"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp100"
            android:layout_weight="1"
            android:background="@drawable/shape_empty_rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dp10"
                android:drawablePadding="@dimen/dp10"
                android:drawableTop="@mipmap/wdqb"
                android:text="@string/wo_de_qian_bao"
                android:textColor="@color/black" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp20"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_jiGou"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp100"
            android:layout_weight="1"
            android:background="@drawable/shape_empty_rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dp10"
                android:drawablePadding="@dimen/dp10"
                android:drawableTop="@mipmap/wdjg"
                android:text="@string/wo_de_ji_gou"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/shape_empty_rectangle"
        android:orientation="vertical">

        <LinearLayout style="@style/login_lineStytle"
            android:id="@+id/ll_wdjl">

            <TextView
                style="@style/login_left_textStyle"
                android:drawableLeft="@mipmap/wdjl"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:text="@string/wdjl" />

            <TextView
                style="@style/login_right_editextStyle"
                android:drawablePadding="@dimen/dp10"
                android:drawableRight="@mipmap/right_error"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dp10"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/shape_empty_rectangle"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout style="@style/login_lineStytle"
            android:id="@+id/ll_ljfe">

            <TextView
                style="@style/login_left_textStyle"
                android:drawableLeft="@mipmap/wdff"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:text="@string/ljff" />

            <TextView
                style="@style/login_right_editextStyle"
                android:drawablePadding="@dimen/dp10"
                android:drawableRight="@mipmap/right_error"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dp10"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/shape_empty_rectangle"
        android:orientation="vertical">

        <LinearLayout style="@style/login_lineStytle"
            android:id="@+id/ll_aboutUs">

            <TextView
                style="@style/login_left_textStyle"
                android:drawableLeft="@mipmap/gywm"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:text="@string/gywm" />

            <TextView
                style="@style/login_right_editextStyle"
                android:drawablePadding="@dimen/dp10"
                android:drawableRight="@mipmap/right_error"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dp10"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/shape_empty_rectangle"
        android:orientation="vertical">

        <LinearLayout style="@style/login_lineStytle"
            android:id="@+id/ll_yiJianFanKui">

            <TextView
                style="@style/login_left_textStyle"
                android:drawableLeft="@mipmap/yjfk"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:text="@string/yjfk" />

            <TextView
                style="@style/login_right_editextStyle"
                android:drawablePadding="@dimen/dp10"
                android:drawableRight="@mipmap/right_error"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dp10"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>