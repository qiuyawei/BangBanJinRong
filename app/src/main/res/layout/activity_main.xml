<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <FrameLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray3"
        android:layout_marginBottom="@dimen/dp51"
         />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_margin="@dimen/dp20"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="#f2f2f2"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/radioButton1"
            style="@style/MMTabButton"
            android:text="@string/tab_one_name"
            android:drawableTop="@drawable/index_tab_img1"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radioButton4"
            style="@style/MMTabButton"
            android:text="@string/tab_four_name"
            android:drawableTop="@drawable/index_tab_img4"
            />
        <RadioButton
            android:id="@+id/radioButton2"
            style="@style/MMTabButton"
            android:text="@string/tab_two_name"
            android:drawableTop="@drawable/index_tab_img2"
            />
        <RadioButton
            android:id="@+id/radioButton3"
            style="@style/MMTabButton"
            android:text="@string/tab_three_name"
            android:drawableTop="@drawable/index_tab_img3"
            />
    </RadioGroup>
    </LinearLayout>
</RelativeLayout>
