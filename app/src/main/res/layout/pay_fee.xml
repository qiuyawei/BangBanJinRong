<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3">
    <include layout="@layout/top_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/shape_empty_rectangle"
        android:gravity="center_vertical"
        >
        <TextView
            style="@style/login_left_textStyle"
            android:text="需支付(¥):"
            />
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/red"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/shape_empty_rectangle"
        android:gravity="center_vertical"
        >
     <LinearLayout
         android:id="@+id/ll_zfb"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp50"
         android:orientation="horizontal"
         android:paddingLeft="@dimen/dp10"
         android:gravity="center_vertical">
         <CheckBox
             android:id="@+id/cbZfb"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:button="@drawable/register_checkbox"
             android:checked="true"
             android:textColor="@color/gray"/>
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/zfb"
             android:layout_marginLeft="@dimen/dp20"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="支付宝"
             android:layout_marginLeft="@dimen/dp10"
             android:textColor="@color/black"/>
     </LinearLayout>
        <View
            style="@style/login_viewStyle"/>
        <LinearLayout
            android:id="@+id/ll_wx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp10"
            android:gravity="center_vertical">
            <CheckBox
                android:id="@+id/cbWx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/register_checkbox"
                android:checked="false"
                android:textColor="@color/gray"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wx"
                android:layout_marginLeft="@dimen/dp20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/black"/>
        </LinearLayout>
        <View
            style="@style/login_viewStyle"/>
        <LinearLayout
            android:id="@+id/ll_ye"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp10"
            android:gravity="center_vertical">
            <CheckBox
                android:id="@+id/cbYe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/register_checkbox"
                android:checked="false"
                android:textColor="@color/gray"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ye"
                android:layout_marginLeft="@dimen/dp20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额支付"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/bt_pay"
            style="@style/common_button"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp10"
            android:text="支付"/>
    </RelativeLayout>
</LinearLayout>